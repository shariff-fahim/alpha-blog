<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>Action</th>
  </tr>
  <% @articles.each do |a| %>
    <tr>
      <td><%= a.user.username %></td>
      <td><%= a.title %></td>
      <td><%= a.description %></td>
      <td>
        <%= link_to('Show', article_path(a)) %>
        
        <% if logged_in? && a.user == current_user %>
          <%= link_to('Edit', edit_article_path(a)) %>
          <%= link_to('Delete', article_path(a), method: :delete, data: {confirm: 'Are you sure?'}) %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
